@using StackOverflow.Domain.Services
@model StackOverflow.Web.Models.AccountProfileModel

@{
    ViewBag.Title = "Profile";
}

<h2>Profile</h2>

<div>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.QuestionsAsked)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuestionsAsked)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Answers)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Answers)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Age)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RegistrationDate)
        </dt>

        <dd>
            @TimeFormatter.GetRelativeDate(Model.RegistrationDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProfileViews)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProfileViews)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastProfileViewDate)
        </dt>

        <dd>
            @TimeFormatter.GetRelativeDate(Model.LastProfileViewDate)
        </dd>

    </dl>
</div>

<div class="row">
    <h4>Questions</h4>
    <hr />
    <ul class="list-group">
        @foreach (var item in Model.QuestionList)
        {
            <li class="list-group-item col-md-9 ">
                <div> @Html.ActionLink(item.Title, "Details", "Question", new {id = item.QuestionId}, null)</div>
            </li>
        }
    </ul>
</div>
<hr/>
<div class="row">
    <h4>Answers</h4>
    <hr/>
    <ul class="list-group">
        @foreach (var item in Model.AnswerList)
        {
            <li class="list-group-item col-md-9 ">
                <div> @Html.ActionLink(item.Description.Substring(0,10)+"...", "Details", "Question", new { id = item.QuestionId }, null)</div>
            </li>
        }
    </ul>
</div>

